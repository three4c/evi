{
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false
  },
  "formatter": {
    "enabled": true,
    "includes": ["**", "!.output/**", "!.wxt/**", "!coverage/**"],
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "includes": ["**", "!.output/**", "!.wxt/**", "!coverage/**"],
    "rules": {
      "recommended": true,
      "correctness": {
        "useExhaustiveDependencies": "warn",
        "useHookAtTopLevel": "error",
        "noUnusedImports": "error"
      },
      "suspicious": {
        "noConsole": "error",
        "noExplicitAny": "error",
        "noArrayIndexKey": "error",
        "noAssignInExpressions": "off"
      },
      "style": {
        "useComponentExportOnlyModules": "error",
        "useImportType": "error"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  }
}
